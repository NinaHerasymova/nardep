{% import 'partials/_category-button.twig' as btn %}
{% block news_card %}
  <div class="news-card"
    style="background-image: linear-gradient(0deg, #000000 0%, rgba(0, 0, 0, 0) 62.44%), url({{
    item.thumbnail
    }})">
    <div class="news-card__data">
      {{
        btn.category_button({
          name: item.category,
          link:  get_cat_link(item.category)
        })
      }}
      <div class="news-card__data-date">
        {{ item.date }}
      </div>
    </div>
    <h3 class="news-card__data-title">
      <a href="{{ item.link }}">{{ item.title }}</a>
    </h3>
  </div>
{% endblock %}
